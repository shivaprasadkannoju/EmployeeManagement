@model EmployeeDeleteViewModel

@{
    ViewBag.Title = " Delete Employee";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "Noimage.jpg");
}
<div class="row justify-content-center m-3">
    <div class="card">
        <form enctype="multipart/form-data" asp-controller="home" asp-action="Delete" method="post" class="mt-3">
            <div class="form-group row">
                <input hidden asp-for="Id" />
                <input hidden asp-for="ExistingPhotoPath" />
                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                    <h4>Employee ID : @Model.Id</h4>
                    <h4>Email : @Model.Email</h4>
                    <h4>department : @Model.Department</h4>

                </div>
            </div>
            <div class="form-group row text-center">
                <div class="col-sm-10" >
                    <button type="submit" class="btn btn-danger">Yes</button>
                    <a asp-controller="home" asp-action="index"
                       class="btn btn-primary">No</a>
                </div>
            </div>

        </form>
    </div>
</div>

    @section Scripts {
        <script src="~/js/CustomScript.js"></script>
    }
